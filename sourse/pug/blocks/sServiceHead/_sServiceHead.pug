mixin servicesItem(content) 
	+e.LI.item
		+e.BUTTON.link!= content

mixin servicesList()
	.col
		+b.UL.services-list&attributes(attributes)
			block

mixin servicesDescription(text)
	.col-desc.col-12
		+b.P.services-description-text!= text

mixin servicesGoods(num, text)
	.col-sm-6.col-lg-4.col-xl-3
		+b.services-goods&attributes(attributes)
			span!= num 
			span!= text

mixin dropdown-item(text)
	.dropdown-item(href='#')!= text

mixin serviceDropdown()
	+b.dropdown
		+e.BUTTON#dropdown-toggle.btn.btn.dropdown-toggle(type='button') Все отрасли
			+icon('chevron-down')
		.dropdown-menu#dropdown-menu
			+dropdown-item("Напитки")
			+dropdown-item("Мясные продукты")
			+dropdown-item("Молочные и НЕмолочные продукты")
			+dropdown-item("Бакалея и кондитерские изделия")
			+dropdown-item("Фармацевтика")
			+dropdown-item("Дети и здоровье")
			+dropdown-item("Финансы и девелопмент")
			+dropdown-item("Государственные организации и программы")
			+dropdown-item("Технологии")
			+dropdown-item("Товары и услуги для детей")
			+dropdown-item("Бытовая химия и товары для дома")
			+dropdown-item("Социально значимые проекты и госпрограммы")

mixin sServiceHead(data)
	// start sServiceHead
	+b.sServiceHead.section#sServiceHead&attributes(attributes)
		.container
			.row
				block
	// end sServiceHead