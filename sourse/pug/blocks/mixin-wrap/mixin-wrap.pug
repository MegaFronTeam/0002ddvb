mixin news-item(i, t, d, links)
	.col-md-6
		+b.news-item(href="#")
			+pic(`sNews-${i}.jpg`, 'bg', 0)
			h3!= t
			if d
				+e.date!= d
			if links
				block

mixin btn-more(l, t)
	a.btn-more(href=`${l}`)
			+icon('chevron-right-btn')
			span!= t

mixin downloadLink(text, a="#")
	+b.A.download-link(href=a)
		+icon('doc-download')
		span!= text
			
mixin purePreloader()
	+b.spinner

mixin formBlock(data)
	+b.form-block
		.container
			+e.FORM.search
				if data.form
					+input("Поиск")
					button 
						+icon('search')
				if data.text
					p!= data.text 
			if data.btn
				ul
					li
						button(type="button").active Портфолио
					li
						button(type="button") Новости
					li
						button(type="button") Услуги
			if data.error 
				+e.P.error!= data.error

mixin cardItem(title, text, i, btn)
	+b.cardWrrap&attributes(attributes)
		+e.content
			h2!= title
			if text
				span!= text
			if btn
				+e.BUTTON.btn!= btn
		+pic(`${i}`, 'bg', 0)