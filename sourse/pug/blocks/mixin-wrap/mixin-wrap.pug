mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin servicesItem(content) 
	+e.LI.item
		+e.link(href="#")!= content

mixin servicesList()
	.col
		+b.UL.services-list&attributes(attributes)
			block

mixin servicesDescription(text)
	.col-desc.col-12
		+b.P.services-description-text!= text

mixin servicesGoods(num, text)
	.col-sm-6.col-lg-4.col-xl-3
		+b.services-goods&attributes(attributes)
			span!= num 
			span!= text
mixin page-head(t, filter)
	+b.page-head 
		.container
			block
			h1= t
			if filter
				+b.filter
					+e.link--active(href="#") Услуги
					+e.link(href="#") Отрасли

mixin mainSliderItem(imgLg, imgSm, title, text)
	+e.slide.swiper-slide.bg-wrap
		picture.picture-bg
			//- slide-lg 
			//- slide-sm 
			source(type='image/avif' srcset=`img/@2x/avif/${imgLg}.avif` media='(min-width:576px)')
			source(type='image/avif' srcset=`img/@2x/avif/${imgSm}.avif`)
			source(type='image/webp' srcset=`img/@2x/webp/${imgLg}.webp` media='(min-width:576px)')
			source(type='image/webp' srcset=`img/@2x/webp/${imgSm}.webp`)
			source(type='image/jpg' srcset=`img/@2x/avif/${imgLg}.jpg` media='(min-width:576px)')
			source(type='image/jpg' srcset=`img/@2x/avif/${imgSm}.jpg`)
			img.object-fit-js(src=`img/@2x/${imgLg}.jpg` alt='' loading='lazy')
		.container
			+e.text-wrap
				h2!= title
				p!= text

mixin mainSlider()
	+b.main-slider--js.swiper&attributes(attributes)
		.swiper-wrapper
			block
		.swiper-pagination

mixin search()
	+b.search-block
		+e.btn--show.--js.d-none.d-lg-block
			+icon("search2")
		+e.hidden-block
			form
				+input("Поиск")
				+e.btn(type="submit").d-lg-none
					+icon("search2")
			+e.btn--close.--js.d-none.d-lg-block
				+icon("close")
	//- +b.search-result.d-none.d-lg-block
		mixin item(t)
			+e.group
				if t
					+e.title= t
				block
		+item()
			+e.btns.row
				.col-auto: +e.btn.btn-gray(href="#") Новости
				.col-auto: +e.btn.btn-gray(href="#") Немолоко
				.col-auto: +e.btn.btn-gray(href="#") Награды
		+item("Услуги")
			+servicesList()
				+servicesItem('Стратегия ')
				+servicesItem('Продвижение')
				+servicesItem('Потребительский брендинг')
		+item("Портфолио")
			.row
				.col-md-6
					+cardItem('Bakerton. Выбери цвет настроения!', 'Потребительский брендинг', 'main-bg').--horizontal
				.col-md-6
					+cardItem('Bakerton. Выбери цвет настроения!', 'Потребительский брендинг', 'main-bg').--horizontal
		+item("Новости")
			.mb-2
				a.link-body(href="#") Nemoloko выводит на рынок новые линейки 
					span.text-secondary-light / 12 января
			.mb-2
				a.link-body(href="#") Это вам – Nemoloko! Новая категория! Новый бренд! 
					span.text-secondary-light / 16 января
		+b.more-link
			+e.btn(href="#")
				+icon('chevron-right-btn')
			| Все результаты поиска

